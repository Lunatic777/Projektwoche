<?php

$pdo = new PDO("mysql_host=localhost;dbname=projektwochen-db";"root","");

#!HANDLE WITH CARE!#

function eraseUsers()
{
	#Erases all data from table 'user'
	$statement = $pdo->prepare("DELETE FROM users");
	$statement->execute();
}

function eraseProjects()
{
	#Erases all data from table 'projects'
	$statement = $pdo->prepare("DELETE FROM projects");
	$statement->execute();
}

function eraseVote()
{
	#Erases all data from table 'vote'
	$statement = $pdo->prepare("DELETE FROM vote");
	$statement->execute();
}
?>
